{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SerenDesktop",
  "version": "0.1.0",
  "identifier": "com.serendb.desktop",
  "mainBinaryName": "Seren",
  "build": {
    "beforeDevCommand": "pnpm build:sidecar && pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build:sidecar:release && pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Seren",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ipc://localhost https://api.serendb.com https://api.openai.com https://auth.openai.com https://accounts.google.com https://oauth2.googleapis.com https://generativelanguage.googleapis.com https://openrouter.ai; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https:",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://releases.serendb.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": "SEREN_RELEASES_PUBLIC_KEY_PLACEHOLDER",
      "dialog": false
    },
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg", "deb", "appimage"],
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "embedded-runtime/": "embedded-runtime/"
    },
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": "http://timestamp.digicert.com"
    }
  }
}
