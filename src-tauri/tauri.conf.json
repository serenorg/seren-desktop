{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SerenDesktop",
  "version": "1.3.40",
  "identifier": "com.serendb.desktop",
  "mainBinaryName": "Seren",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build:sidecar:release && pnpm build:openclaw && pnpm sign:embedded-runtime && pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Seren",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ipc://localhost http://ipc.localhost https://api.serendb.com https://api.github.com https://raw.githubusercontent.com https://api.openai.com https://auth.openai.com https://accounts.google.com https://oauth2.googleapis.com https://generativelanguage.googleapis.com https://openrouter.ai; script-src 'self'; worker-src 'self' blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' asset: https: data:; font-src 'self' https://fonts.gstatic.com; frame-src http://127.0.0.1:* http://localhost:*",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://pub-714fe894394345a0a8a102fbac2b208f.r2.dev/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdGQTYwRTZBOEE0Mzg5QTcKUldTbmlVT0thZzZtZjhBS3d6L0dqY2lOVWlHSXRJNkFuRWlwSTVTM2hQSkdhVjBHRnh6UWw5a2gK",
      "dialog": false
    },
    "shell": {
      "open": true
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "seren"
        ]
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": "v1Compatible",
    "active": true,
    "targets": [
      "app",
      "nsis",
      "dmg",
      "deb",
      "appimage"
    ],
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "embedded-runtime/": "embedded-runtime/",
      "../mcp-servers/playwright-stealth/": "mcp-servers/playwright-stealth/"
    },
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": "https://timestamp.digicert.com",
      "nsis": {
        "installerHooks": "nsis/installer-hooks.nsh"
      }
    }
  }
}
