{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Seren Desktop",
  "version": "0.1.0",
  "identifier": "com.serendb.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Seren Desktop",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.serendb.com; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https:",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://releases.serendb.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": "SEREN_RELEASES_PUBLIC_KEY_PLACEHOLDER",
      "dialog": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
